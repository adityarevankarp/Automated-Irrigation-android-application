<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.dsce.automatedIrrigation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="app.dsce.automatedIrrigation.Irrigate"
            android:exported="false" />
        <activity
            android:name="app.dsce.automatedIrrigation.Weatherforcast"
            android:windowSoftInputMode="adjustPan"
            android:exported="false"
            />
        <activity android:name="app.dsce.automatedIrrigation.OtpVerification" />
        <activity
            android:name="app.dsce.automatedIrrigation.MainActivity"

            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="app.dsce.automatedIrrigation.Precipitation" />
        <activity android:name="app.dsce.automatedIrrigation.WindActivity" />
        <activity android:name="app.dsce.automatedIrrigation.TempActivity" />
        <activity
            android:name="app.dsce.automatedIrrigation.CropActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>